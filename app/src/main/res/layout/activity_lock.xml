<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nate.cartoon.phonescreen.view.LockActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7월 22일(금) 오후 08:30"
                android:textSize="28dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="APPLE"
                android:textSize="48dip" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/diction"
                    android:layout_width="wrap_content"
                    android:layout_height="48dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="[|ӕpl]"
                    android:textSize="36dip" />

                <Button
                    android:id="@+id/play"
                    android:layout_width="36dip"
                    android:layout_height="36dip"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/speaker"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/diction"
                    android:layout_marginStart="14dp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/mean_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <ListView
                android:id="@+id/examplesentence_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/alpha"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:text="추가" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/alpha"
                android:textStyle="bold"
                android:text="확인" />

            <Button
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/alpha"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:text="설정" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
